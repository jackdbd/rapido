{
  "name": "@repo/scripts",
  "version": "0.1.1",
  "description": "Scripts for managing the project.",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "private": true,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "build": "run-s 'build:ts' 'build:readme' --print-label",
    "build:readme": "node ./dist/readme.js --package scripts",
    "build:ts": "tsc -p tsconfig.json",
    "build:ts:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint --config ../../eslint.config.mjs --fix",
    "pub": "echo '@repo/scripts is a private package. Skip publishing it.'"
  },
  "dependencies": {
    "@apideck/better-ajv-errors": "^0.3.6",
    "@sinclair/typebox": "^0.34.14",
    "@thi.ng/transclude": "^1.1.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
