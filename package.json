{
  "name": "rapido",
  "description": "Monorepo for my Fastify plugins and support libraries.",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "private": true,
  "keywords": [
    "fastify",
    "monorepo",
    "plugin"
  ],
  "packageManager": "^npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:app": "turbo build --filter @repo/demo-app",
    "build:plugins": "turbo build --filter ./packages/fastify-webc --filter ./packages/fastify-authorization-endpoint",
    "build:readme": "npm run build:readme --workspaces --if-present",
    "build:scripts": "npm run build -w @repo/scripts",
    "build:ts": "tsc --build --verbose",
    "build:ts:watch": "tsc --build --watch",
    "changeset:reset": "rm -f .changeset/pre.json && find .changeset -type f -name \"*.md\" ! -name \"README.md\" -delete",
    "clean": "npm run clean --workspaces --if-present",
    "copy:webc": "npm run copy:webc --workspaces --if-present",
    "deps": "taze",
    "dev": "turbo dev --concurrency=25",
    "dev:app": "npm run dev -w @repo/demo-app",
    "dev:app:turbo": "turbo dev -F @jackdbd/fastify-micropub-endpoint -F @repo/demo-app",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "nuke": "npm run clean && rm -rf node_modules package-lock.json",
    "publint": "npm run publint --workspaces --if-present",
    "publish": "npm run build:ts && npm run copy:webc && changeset publish",
    "size": "npm run size --workspaces --if-present",
    "start:app": "npm run start -w @repo/demo-app",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:watch:fastify-webc": "turbo test:watch --filter ./packages/fastify-webc"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@reporters/github": "^1.7.2",
    "@types/html-to-text": "^9.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/nunjucks": "^3.2.6",
    "@types/sanitize-html": "^2.13.0",
    "@types/seedrandom": "^3.0.8",
    "fastify": "^5.2.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "pkg-size": "^2.4.0",
    "prettier": "^3.4.2",
    "publint": "^0.3.2",
    "rimraf": "^6.0.1",
    "taze": "latest",
    "tsm": "^2.3.0",
    "turbo": "^2.3.3",
    "typescript": "5.7.3",
    "yargs": "^17.7.2"
  }
}
