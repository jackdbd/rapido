{
  "name": "@repo/demo-app",
  "version": "0.0.1",
  "description": "Fastify application to test and showcase the usage of several Fastify plugins",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "private": true,
  "keywords": [
    "demo",
    "fastify"
  ],
  "type": "module",
  "module": "dist/server.js",
  "exports": {
    ".": "./dist/server.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "run-s 'build:ts' --print-label",
    "build:ts": "tsc -p tsconfig.json",
    "clean": "rimraf dist/ tsconfig.tsbuildinfo",
    "dev": "NODE_ENV=development tsm src/server.ts --port 3001 --print-plugins --print-routes | pino-pretty",
    "lint": "eslint --config ../../eslint.config.mjs --fix",
    "size": "pkg-size ./dist --sort-by=brotli --ignore-files {*.d.ts,*.map}",
    "start": "node dist/server.js --port 3001 --print-plugins --print-routes | pino-pretty"
  },
  "dependencies": {
    "@fastify/request-context": "^6.0.2",
    "@fastify/view": "^10.0.2",
    "@jackdbd/fastify-authorization-endpoint": "1.3.0-canary.14",
    "@jackdbd/fastify-micropub-endpoint": "0.2.0-canary.17",
    "@jackdbd/fastify-token-endpoint": "1.3.0-canary.17",
    "@jackdbd/indieauth": "0.2.0-canary.10",
    "@jackdbd/micropub": "0.2.0-canary.10",
    "close-with-grace": "^2.2.0",
    "fastify": "^5.2.1",
    "nanoid": "^5.0.9",
    "nunjucks": "^3.2.4"
  }
}
