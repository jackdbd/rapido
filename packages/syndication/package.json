{
  "name": "@repo/syndication",
  "version": "0.1.0",
  "description": "Syndication library (internal use for now).",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "private": true,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./*": {
      "types": "./lib/*.d.ts",
      "import": "./lib/*.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "run-s 'build:ts' 'build:readme' --print-label",
    "build:readme": "node ../scripts/dist/readme.js --package syndication",
    "build:ts": "tsc -p tsconfig.json",
    "build:ts:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint --config ../../eslint.config.mjs --fix",
    "pub": "echo '@repo/syndication is a private package. Skip publishing it.'"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.14",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
