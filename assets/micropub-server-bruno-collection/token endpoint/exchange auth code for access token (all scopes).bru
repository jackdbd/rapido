meta {
  name: exchange auth code for access token (all scopes)
  type: http
  seq: 2
}

post {
  url: {{token_endpoint}}
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  grant_type: authorization_code
  client_id: {{client_id}}
  code: {{code}}
  code_verifier: {{code_verifier}}
  redirect_uri: {{redirect_uri}}
}
