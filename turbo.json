{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["build:ts"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "lib/**"]
    },
    // "build:readme": {
    //   "cache": false,
    //   "dependsOn": ["^build:ts"],
    //   "inputs": ["$TURBO_DEFAULT$", ".env*", "tpl.readme.md", "readme.ts"],
    //   "outputs": ["README.md"]
    // },
    "build:ts": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "lib/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "size": {
      "dependsOn": ["build:ts"]
    },
    "test": {
      "dependsOn": ["build:ts"]
    },
    "test:ci": {
      "dependsOn": ["build:ts"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "dependsOn": ["^test:watch"],
      "persistent": true
    }
  }
}
