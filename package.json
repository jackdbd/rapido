{
  "name": "rapido",
  "description": "Monorepo for my Fastify plugins and support libraries.",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "private": true,
  "keywords": [
    "fastify",
    "monorepo",
    "plugin"
  ],
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "aaa": "npm run build:readme -w ./packages/fastify-userinfo-endpoint",
    "build": "turbo build",
    "build:app": "turbo build --filter @repo/demo-app",
    "build:plugins": "turbo build --filter ./packages/fastify-webc --filter ./packages/fastify-authorization-endpoint",
    "build:readme": "npm run build:readme --workspaces --if-present",
    "build:scripts": "npm run build -w @repo/scripts",
    "build:ts": "tsc --build --verbose",
    "clean": "turbo clean",
    "copy:webc": "npm run copy:webc --workspaces --if-present",
    "deps": "taze",
    "dev": "turbo dev --concurrency=15",
    "dev:app": "turbo dev --filter ./apps/demo-app",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "nuke": "npm run clean && rm -rf node_modules package-lock.json",
    "publint": "npm run publint --workspaces --if-present",
    "release:dry": "multi-semantic-release --no-ci --dry-run --debug --ignore-private",
    "release:fastify-authorization-endpoint": "npm run release -w packages/fastify-authorization-endpoint",
    "release:fastify-introspection-endpoint": "npm run release -w packages/fastify-introspection-endpoint",
    "release:fastify-revocation-endpoint": "npm run release -w packages/fastify-revocation-endpoint",
    "release:fastify-token-endpoint": "npm run release -w packages/fastify-token-endpoint",
    "release:fastify-userinfo-endpoint": "npm run release -w packages/fastify-userinfo-endpoint",
    "release:fastify-webc": "npm run release -w packages/fastify-webc",
    "size": "turbo size",
    "start:app": "npm run start -w @repo/demo-app",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:watch:fastify-webc": "turbo run test:watch --filter ./packages/fastify-webc"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@qiwi/multi-semantic-release": "^7.1.2",
    "@reporters/github": "^1.7.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@thi.ng/transclude": "^1.0.3",
    "fastify": "^5.2.1",
    "npm-run-all": "^4.1.5",
    "pkg-size": "^2.4.0",
    "prettier": "^3.4.2",
    "publint": "^0.3.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "semantic-release-telegram": "^1.6.2",
    "taze": "latest",
    "tsm": "^2.3.0",
    "turbo": "^2.3.3",
    "typescript": "5.7.3",
    "yargs": "^17.7.2"
  }
}
